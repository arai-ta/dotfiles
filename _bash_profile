# .bash_profile

# User specific environment and startup programs

# umask
umask 022

# LANG
export LANG=en_US.UTF-8
ja=ja_JP.UTF-8
alias jman="LANG=$ja man"

export HISTFILESIZE=500000
export HISTSIZE=500000

# mac
if [ -d /opt/homebrew -a "$(arch)" = "arm64" ]
then
    export HOMEBREW_PREFIX="/opt/homebrew";
    export HOMEBREW_CELLAR="/opt/homebrew/Cellar";
    export HOMEBREW_REPOSITORY="/opt/homebrew";
    export PATH="/opt/homebrew/bin:/opt/homebrew/sbin${PATH+:$PATH}";
    export MANPATH="/opt/homebrew/share/man${MANPATH+:$MANPATH}:";
    export INFOPATH="/opt/homebrew/share/info:${INFOPATH:-}";
fi

if [ `uname` = "Darwin" ]
then
    export PATH=~/work/bin:$PATH
    export HOMEBREW_NO_INSTALL_CLEANUP=1
    export BASH_SILENCE_DEPRECATION_WARNING=1
fi

if which less >/dev/null ;then
    export PAGER=less
fi
if which vim >/dev/null ;then
    export EDITOR=vim
fi

# Get the aliases and functions
if [ -f ~/.bashrc ]; then
	. ~/.bashrc
fi

# share history between multi console window
_share_bash_history() {
    history -a
    history -c
    history -r
}
PROMPT_COMMAND=_share_bash_history
shopt -u histappend

export PS1='\u@\h:\w [\j]\n\$ '

#export JAVA_HOME="$(/usr/libexec/java_home -v 11)"

export GOPATH=~/work

export DO_NOT_TRACK=1

if [ -d ~/Library/Android/sdk ]; then
    export ANDROID_HOME=~/Library/Android/sdk
    export PATH="$PATH:$ANDROID_HOME/tools:$ANDROID_HOME/platform-tools:$ANDROID_HOME/emulator"
    # Android Keystore
    export STORE_PASSWORD_DEBUG='android'
    export KEY_ALIAS_DEBUG='androiddebugkey'
    export KEY_PASSWORD_DEBUG='android'
fi

if [ -f ~/.secret ]; then
    . ~/.secret
fi

