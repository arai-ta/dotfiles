# .bash_profile

# User specific environment and startup programs

# umask
umask 022

# LANG
export LANG=en_US.UTF-8
ja=ja_JP.UTF-8
alias jman="LANG=$ja man"

export HISTFILESIZE=50000
export HISTSIZE=50000

# mac
if [ `uname` = "Darwin" ]
then
    export PATH=$PATH:~/work/bin
    export HOMEBREW_NO_INSTALL_CLEANUP=1
    export BASH_SILENCE_DEPRECATION_WARNING=1
fi

if [ -d /opt/homebrew -a "$(arch)" = "arm64" ]
then
    export PATH=/opt/homebrew/bin:/opt/homebrew/sbin:$PATH
fi

if which less >/dev/null ;then
    export PAGER=less
fi
if which vim >/dev/null ;then
    export EDITOR=vim
fi

# Get the aliases and functions
if [ -f ~/.bashrc ]; then
	. ~/.bashrc
fi

# share history between multi console window
_share_bash_history() {
    history -a
    history -c
    history -r
}
PROMPT_COMMAND=_share_bash_history
shopt -u histappend

export PS1='\u@\h:\w [\j]\n\$ '

export JAVA_HOME="$(/usr/libexec/java_home -v 11)"

export GOPATH=~/work

if [ -d ~/Library/Android/sdk ]; then
    export ANDROID_SDK_ROOT=~/Library/Android/sdk
    export PATH=$ANDROID_SDK_ROOT/tools:$ANDROID_SDK_ROOT/platform-tools:$PATH
    # Android Keystore
    export STORE_PASSWORD_DEBUG='android'
    export KEY_ALIAS_DEBUG='androiddebugkey'
    export KEY_PASSWORD_DEBUG='android'
fi

if [ -f ~/.secret ]; then
    . ~/.secret
fi

